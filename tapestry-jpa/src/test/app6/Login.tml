<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
	<body>
		<div>
			<t:form t:id="login">
				<h2>Please sign in</h2>
				<div>
					<t:textfield t:id="firstname" placeholder="First name"/>
				</div>
				<div>
					<t:textfield t:id="lastname" placeholder="Last name"/>
				</div>
				<div>
					<t:submit t:id="register" />
				</div>
			</t:form>
		</div>
	</body>
</html>
